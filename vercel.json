{
  "version": 2,
  "functions": {
    "api/index.php": {
      "runtime": "vercel-php@0.7.4",
      "excludeFiles": [
        "**/*.md",
        "**/*.dist",
        "**/*.map",
        "**/*.ts",
        ".git/**",
        ".github/**",
        ".vscode/**",
        "node_modules/**",
        "tests/**",
        "storage/logs/**",
        "storage/app/**",
        "storage/framework/cache/**",
        "storage/framework/sessions/**",
        "storage/framework/testing/**",
        "public/storage/**",
        "vendor/**/tests/**",
        "vendor/**/test/**",
        "vendor/**/docs/**",
        "vendor/**/doc/**",
        "vendor/**/examples/**",
        "vendor/**/Examples/**",
        "vendor/bin/**"
      ]
    }
  },
  "routes": [
    { "src": "/build/(.*)", "dest": "/public/build/" },
    { "src": "/(.*)", "dest": "/api/index.php" }
  ],
  "buildCommand": "composer install --no-dev --prefer-dist --classmap-authoritative && npm ci && npm run build",
  "outputDirectory": "public"
}
