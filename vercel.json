{
  "version": 2,
  "framework": null,

  "functions": {
    "api/index.php": {
      "runtime": "vercel-php@0.7.4",
      "excludeFiles": [
        "**/*.md",
        "**/*.map",
        "**/*.ts",
        ".git/**",
        ".github/**",
        ".vscode/**",
        "node_modules/**",
        "tests/**",
        "phpunit.xml*",
        "storage/logs/**",
        "storage/app/**",
        "storage/framework/cache/**",
        "storage/framework/sessions/**",
        "storage/framework/testing/**",
        "public/storage/**",
        "vendor/**/tests/**",
        "vendor/**/test/**",
        "vendor/**/docs/**",
        "vendor/**/doc/**",
        "vendor/**/examples/**",
        "vendor/**/Examples/**",
        "vendor/**/benchmark/**",
        "vendor/bin/**"
      ]
    }
  },

  "routes": [
    { "src": "/build/(.*)", "dest": "/public/build/$1" },
    { "src": "/(.*)", "dest": "/api/index.php" }
  ],


  "installCommand": "composer install --no-dev --prefer-dist --classmap-authoritative && npm ci",
  "buildCommand": "composer dump-autoload -o && npm run build",

  "outputDirectory": "public",
  "public": true,

  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "APP_URL": "https://yourproductionurl.com",
